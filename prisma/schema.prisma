generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model Farm {
    id          Int      @id @default(autoincrement())
    Farmer      Farmer[]
    name        String
    num_cows     Int
    num_chickens Int
    num_pigs     Int
    acres_farmed Int
}

model Farmer {
    id           Int           @id @default(autoincrement())
    name         String
    age          Int?
    phone_number String?
    farm_id       Int?
    farm         Farm?         @relation(fields: [farm_id], references: [id])
    Applications Application[]
}

model Product {
    id          Int           @id @default(autoincrement())
    type        String
    name        String
    Application Application[]
}

model Application {
    id               Int      @id @default(autoincrement())
    type             String
    amount_requested Float?
    status           String
    product          Product? @relation(fields: [product_id], references: [id])
    product_id        Int?
    farmer           Farmer?  @relation(fields: [farmer_id], references: [id])
    farmer_id         Int?
}
